<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="MM.ApplicationCore" namespace="MM.ApplicationCore.Entities">
  <class name="Users">
    <id name="UserId">
      <generator class="native" />
    </id>
    <property name="Username" />
    <property name="Email" />
    <property name="Gender" />
    <property name="DOB" />
    <property name="MobileNo" />
    <property name="Token" not-null="true" />
    <property name="LoginType" not-null="true" />
    <property name="ImageUrl"/>
    <property name="CreatedOn" not-null="true" />
    <property name="UpdatedOn" />
    
    <one-to-one name="Location" class="Location" lazy="false"/>

    <set name="Interests" table="User_Interest" inverse="true" lazy="true">
      <key column="User_id"/>
      <many-to-many class="Interest" column="Interests_Id"/>
    </set>
    
  </class>
</hibernate-mapping>